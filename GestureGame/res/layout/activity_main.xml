<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/b3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:stretchColumns="0,3">
    <TableRow
        android:layout_marginTop="600px">

        <Button
            android:layout_width="200dp"
            android:layout_height="110px"
            android:text="Single Player"
            android:id="@+id/btn_main_single_player"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:singleLine="false" />

    </TableRow>

    <TableRow>

        <Button
            android:layout_width="200dp"
            android:layout_height="110px"
            android:text="Multi Player"
            android:id="@+id/btn_main_multi_player"
            android:onClick="onClick"
            android:layout_gravity="center" />
    </TableRow>
    <TableRow>

        <Button
            android:layout_width="200dp"
            android:layout_height="110px"
            android:text="Extra"
            android:id="@+id/btn_main_extra"
            android:onClick="onClick"
            android:layout_gravity="center" />
    </TableRow>
    <TableRow>

        <Button
            android:layout_width="200dp"
            android:layout_height="110px"
            android:text="Settings"
            android:id="@+id/btn_main_settings"
            android:layout_gravity="center" />
    </TableRow>
    <TableRow>

        <Button
            android:layout_width="200dp"
            android:layout_height="110px"
            android:text="Exit"
            android:id="@+id/btn_main_exit"
            android:layout_gravity="center" />
    </TableRow>
</TableLayout>